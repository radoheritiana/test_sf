{% extends 'base.html.twig' %}

{% block title %}Liste des équipes et des joueurs{% endblock %}

{% block body %}
    <h1>Liste des équipes et des joueurs</h1>
    <table
            class="table table-striped"
            data-toggle="table"
            data-pagination="true"
            data-search="true"
    >
        <thead>
            <tr>
                <th>Nom de l'équipe</th>
                <th>Pays</th>
                <th>Solde monétaire</th>
                <th>Nombre de joueurs</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for team in all_teams %}
            <tr>
                <td>{{ team.name }}</td>
                <td>{{ team.country }}</td>
                <td>{{ team.balance }}</td>
                <td>{{ team.players | length }}</td>
                <td>
                    <button class="btn btn-secondary">Voir les joeurs</button>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="5">Il n'y a pas encore d'équipe, veuillez ajouter!</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
