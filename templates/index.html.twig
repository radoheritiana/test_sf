{% extends 'base.html.twig' %}

{% block title %}Liste des équipes et des joueurs{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6">
            <h1>Liste des équipes</h1>
            <div class="d-flex justify-content-between my-2">
                <div class="count">
                    {{ all_teams.getTotalItemCount }} équipe{% if all_teams.getTotalItemCount != 1 %}s{% endif%} au total
                </div>
                <div>
                    <input name="search" id="search" type="search" class="form-control" placeholder="Rechercher...">
                </div>
            </div>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th {% if all_teams.isSorted('t.name') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(all_teams, 'Nom de l\'équipe', 't.name') }}</th>
                    <th {% if all_teams.isSorted('t.country') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(all_teams, 'Pays', 't.country') }}</th>
                    <th {% if all_teams.isSorted('t.balance') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(all_teams, 'Solde', 't.balance') }}</th>
                    <th>Nombre de joueurs</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for team in all_teams %}
                    <tr>
                        <td>{{ team.name }}</td>
                        <td>{{ team.country }}</td>
                        <td>{{ team.balance }}</td>
                        <td>{{ team.players | length }}</td>
                        <td>
                            <button class="btn btn-secondary" onclick="(e) => openModal(e)">Voir les joeurs</button>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">Il n'y a pas encore d'équipe, veuillez ajouter!</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="navigation">
                {{ knp_pagination_render(all_teams) }}
            </div>
        </div>
        <div class="col-md-6">
            <h1>Liste des joueurs</h1>
            <div class="d-flex justify-content-between my-2">
                <div class="count">
                    {{ all_players.getTotalItemCount }} joueur{% if all_players.getTotalItemCount != 1 %}s{% endif%} au total
                </div>
                <div>
                    <input name="search" id="search" type="search" class="form-control" placeholder="Rechercher...">
                </div>
            </div>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th {% if all_players.isSorted('p.first_name') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(all_players, 'Prénoms', 'p.first_name') }}</th>
                    <th {% if all_players.isSorted('p.last_name') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(all_players, 'Nom de famille', 'p.last_name') }}</th>
                    <th>Equipe</th>
                </tr>
                </thead>
                <tbody>
                {% for team in all_players %}
                    <tr>
                        <td>{{ team.firstName }}</td>
                        <td>{{ team.lastName }}</td>
                        <td>{{ team.team.name }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">Il n'y a pas encore de joueurs, veuillez ajouter!</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="navigation">
                {{ knp_pagination_render(all_players) }}
            </div>
        </div>
    </div>


    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
        Launch static backdrop modal
    </button>

    <!-- Modal -->
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Modal title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Understood</button>
                </div>
            </div>
        </div>
    </div>
